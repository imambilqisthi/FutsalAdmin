<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="@drawable/shape_login"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="6dp" >
        <LinearLayout
            android:background="@drawable/shape_cardview"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/TVlapangan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ribeye_marrow"
                        android:text="lapangan"
                        android:textColor="@color/white"
                        android:textSize="25dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/TVstatus"
                        android:fontFamily="@font/ribeye_marrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="status"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/TVnama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ribeye_marrow"
                        android:text="nama"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/TVtanggal"
                        android:fontFamily="@font/ribeye_marrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="tanggal"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/TVslot"
                        android:fontFamily="@font/ribeye_marrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Slot Jam"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/TVjam"
                        android:fontFamily="@font/ribeye_marrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="jam"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/TVtelpone"
                        android:fontFamily="@font/ribeye_marrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="telephone"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/BtnDelete"
                    android:layout_alignBaseline="@+id/BtnUpdate"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/ribeye_marrow"
                    android:background="@drawable/shape_button"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Delete" />

            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>